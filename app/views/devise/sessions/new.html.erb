<% if notice %>
    <div class="alert alert-info">
      <strong>Notice!</strong> <%= notice %>
    </div>
<% end %>

<% if alert %>
    <div class="alert alert-danger">
      <strong>Alert!</strong> <%= alert %>
    </div>
<% end %>

<div class="ibox-content login-style">
      <h3 style="margin-bottom: 40px;" class="text-center">
      <strong class="header-color"><span class="fa fa-home"></span>   Login</strong></h3>
  <div class="row">
    <div class="col-md-6">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                  <%= f.email_field :email,:placeholder=>"Email", :class=>"form-control", autofocus: true %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, :placeholder=>"Password", :class=>"form-control", autocomplete: "off" %>
              </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>
              <div class="text-center">
                <%= f.submit "Log in", :class => "btn btn-color block full-width m-b" %>
              </div>
          <% end %>
    </div>
  </div>
</div>
<%#= render "devise/shared/links" %>

